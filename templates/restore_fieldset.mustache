{{!
    @template local_backupftp/restore_fieldset

    Example context (json):
    {
        "unique": "Aa123",
        "infocategori_link": "title"
    }
}}

<fieldset id="id-{{unique}}"
          style="border:1px solid #959595;padding:6px;padding-left:50px;margin:3px;">

    <span style="float:right;color:#E91E63;"
          onclick="document.querySelectorAll('#id-{{unique}} input').forEach((e) => e.click());">
        {{#str}}select_deselect_all, local_backupftp{{/str}}
    </span>

    <h5>
        {{{infocategori_link}}}
    </h5>

    {{{data}}}
</fieldset>
